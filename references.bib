month =  feb,
year =  2021,
url = "http://dx.doi.org/10.1111/epi.16843",
file = "All Papers/V/Vieluf et al. 2021 - Twenty-four-hour patterns in electrodermal activity recordings of patients with and without epileptic seizures.pdf",
language = "en"
