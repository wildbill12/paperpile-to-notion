url = "http://dx.doi.org/10.1101/2023.05.19.541412",
file = "All Papers/K/Kassinopoulos et al. 2023 - Brain Connectivity Correlates of Breathing and Cardiac Irregularities in SUDEP - A Resting-State fMRI Study.pdf",
language = "en"
}

