url = "https://link.springer.com/chapter/10.1007/978-94-017-8914-1_11",
file = "All Papers/S/Scharfman and Brooks-Kayal 2014 - Is Plasticity of GABAergic Mechanisms Relevant to Epileptogenesis.pdf",
language = "en"
}

@ARTICLE{Buckmaster2014-bn,
