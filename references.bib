volume = "123 ( Pt 1)",
pages = "19--30",
month =  jan,
year =  2000,
url = "https://www.ncbi.nlm.nih.gov/pubmed/10611117",
file = "All Papers/P/Proper et al. 2000 - Immunohistochemical characterization of mossy fibre ... ippocampus of patients with pharmaco-resistant temporal lobe epilepsy.pdf",
